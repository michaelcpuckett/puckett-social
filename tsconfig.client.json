{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "outDir": "./static"
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./pages/home.ts",
    "./pages/login.ts",
    "./pages/post.ts"
  ]
}
{
  "name": "puckett-social",
  "version": "1.0.0",
  "author": "Michael Puckett <michaelcpuckett@gmail.com>",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "format": "prettier --config .prettierrc \"**/*.ts\" --write",
    "build": "parcel build && tsc --project ./src/tsconfig.json",
    "serve": "node ./lib/index.ts",
    "watch": "parcel"
  },
  "engines": {
    "node": ">=19"
  },
  "license": "MIT",
  "targets": {
    "default": {
      "distDir": "./static",
      "source": [
        "./pages/login.ts",
        "./pages/home.ts"
      ]
    }
  },
  "dependencies": {
    "activitypub-core-auth-crypto": "^0.2.123",
    "activitypub-core-crypto-node": "^0.2.123",
    "activitypub-core-db-mongo": "^0.2.129",
    "activitypub-core-delivery": "^0.2.129",
    "activitypub-core-server-express": "^0.2.129",
    "activitypub-core-storage-ftp": "^0.2.123",
    "activitypub-core-types": "^0.2.123",
    "activitypub-core-utilities": "^0.2.123",
    "cookie": "^0.5.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsdom": "^21.1.1",
    "mongodb": "^5.1.0",
    "nunjucks": "^3.2.3",
    "showdown": "^2.1.0",
    "string-strip-html": "^8.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/nunjucks": "^3.2.2",
    "@types/showdown": "^2.0.0",
    "nodemon": "^2.0.22",
    "parcel": "^2.8.3",
    "ts-node": "^10.9.1"
  }
}

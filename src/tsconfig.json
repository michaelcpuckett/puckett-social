{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "lib": ["es2023", "DOM"],
    "target": "es2022",
    "outDir": "./lib"
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "index.ts"
  ]
}